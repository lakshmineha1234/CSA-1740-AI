def print_board(board):
    for row in board:
        print(" | ".join(row))
        print("-" * 5)

def check_winner(board, player):
    win_cond = [player, player, player]
    # Check rows, columns, and diagonals
    for row in board:
        if row == win_cond:
            return True
    for col in range(3):
        if [board[row][col] for row in range(3)] == win_cond:
            return True
    if [board[i][i] for i in range(3)] == win_cond or [board[i][2-i] for i in range(3)] == win_cond:
        return True
    return False

def is_draw(board):
    return all(cell != " " for row in board for cell in row)

def tic_tac_toe():
    board = [[" " for _ in range(3)] for _ in range(3)]
    players = ["X", "O"]
    current_player = 0

    while True:
        print_board(board)
        row, col = map(int, input(f"Player {players[current_player]}, enter your move (row and column): ").split())
        if board[row][col] != " ":
            print("Cell already taken. Try again.")
            continue
        board[row][col] = players[current_player]

        if check_winner(board, players[current_player]):
            print_board(board)
            print(f"Player {players[current_player]} wins!")
            break

        if is_draw(board):
            print_board(board)
            print("It's a draw!")
            break

        current_player = 1 - current_player

if __name__ == "__main__":
    tic_tac_toe()
